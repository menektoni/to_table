{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": false,
    "removeComments": true,
    "noEmitOnError": false,
    "typeRoots": ["./types.d.ts"]
  },
  "include": [
    "*.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 